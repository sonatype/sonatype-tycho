<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>tycho-p2</artifactId>
    <groupId>org.sonatype.tycho</groupId>
    <version>0.4.0-SNAPSHOT</version>
  </parent>
  
  <artifactId>xstream-osgi</artifactId>
  <version>${xstream-osgi.version}</version>
  <name>XStream Core OSGi Bundle</name>
  <packaging>eclipse-plugin</packaging>

  <properties>
    <xstream.version>1.3.1</xstream.version>
    <xstream-osgi.version>${xstream.version}</xstream-osgi.version>
  </properties>

  <!-- 
    /opt/tycho/bin/mvn -Dtycho.mode=maven -Pupdate-dependencies clean org.codehaus.tycho:maven-osgi-packaging-plugin:generate-bundle
   -->

  <profiles>
    <profile>
      <id>update-dependencies</id>
      <dependencies>
        <dependency>
          <groupId>com.thoughtworks.xstream</groupId>
          <artifactId>xstream</artifactId>
          <version>${xstream.version}</version>
          <exclusions>
            <exclusion>
              <groupId>junit</groupId>
              <artifactId>junit</artifactId>
            </exclusion>
            <exclusion>
              <groupId>jmock</groupId>
              <artifactId>jmock</artifactId>
            </exclusion>
          </exclusions>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-clean-plugin</artifactId>
            <configuration>
              <filesets>
                <fileset>
                  <directory>jars</directory>
                  <followSymlinks>false</followSymlinks>
                  <includes>
                    <include>**/*.jar</include>
                  </includes>
                </fileset>
                <fileset>
                  <directory>META-INF</directory>
                  <followSymlinks>false</followSymlinks>
                  <includes>
                    <include>**/MANIFEST.MF</include>
                  </includes>
                </fileset>
              </filesets>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.codehaus.tycho</groupId>
            <artifactId>maven-osgi-packaging-plugin</artifactId>
            <executions>
              <execution>
                <phase>process-classes</phase>
                <goals>
                  <goal>generate-bundle</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <packageSources>false</packageSources>
              <exportPackages>
                com.thoughtworks.xstream.*
              </exportPackages>
              <manifestAttributes>
                <Bundle-SymbolicName>org.sonatype.tycho.xstream.osgi</Bundle-SymbolicName>
                <Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
              </manifestAttributes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.tycho</groupId>
        <artifactId>maven-osgi-packaging-plugin</artifactId>
        <configuration>
          <buildPropertiesFile>${project.basedir}/build.properties</buildPropertiesFile>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>